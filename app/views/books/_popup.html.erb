<script type="text/javascript">
    $(function() {
        $("#login_dialog").dialog({
            autoOpen: false,
            modal: true,
            draggable: false,
            resizable: false,
            open: function(event, ui){
                $('.ui-widget-overlay').click(function() { $("#login_dialog").dialog("close"); });
            }
        });
        $("#fb_login").click(function(e) {
            popupCenter($(this).attr("href"), $(this).attr("data-width"), $(this).attr("data-height"), "authPopup");
            e.stopPropagation(); return false;
        });
    });
</script>

<div id="login_dialog" title="Sign Up to Vote!">
  <%= link_to 'Sign in with Facebook ',
              user_omniauth_authorize_path(:facebook), :class => "fb-login-button",
              :id => "fb_login", :"data-width" => 600, :"data-height" => 400 %>
</div>